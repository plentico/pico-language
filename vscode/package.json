{
  "name": "pico-language",
  "displayName": "Pico Templates by Plentico",
  "description": "Syntax highlighting for Pico template files - a component-based templating system",
  "version": "0.0.4",
  "publisher": "plentico",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/plentico/pico-language"
  },
  "bugs": {
    "url": "https://github.com/plentico/pico-language/issues"
  },
  "homepage": "https://github.com/plentico/pico-language#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pico",
    "template",
    "html",
    "component",
    "syntax"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "pico",
        "aliases": ["Pico", "pico"],
        "extensions": [".pico", ".pico.html"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pico",
        "scopeName": "source.pico",
        "path": "./syntaxes/pico.tmLanguage.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.js": "javascript",
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "pico",
        "path": "./snippets/pico.json"
      }
    ],
    "iconThemes": [
      {
        "id": "pico-icons",
        "label": "Pico File Icons",
        "path": "./icons/pico-file-icon.json"
      }
    ]
  }
}
